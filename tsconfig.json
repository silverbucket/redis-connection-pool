{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "types": [
      "node", "mocha"
    ],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceRoot": "/",
    "mapRoot": "/"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "dist",
    "*.d.ts"
  ]
}
