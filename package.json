{
  "name": "redis-connection-pool",
  "version": "4.0.1",
  "description": "a redis client connection pool",
  "homepage": "https://silverbucket.github.io/redis-connection-pool",
  "license": "MIT",
  "private": false,
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "keywords": [
    "redis",
    "client",
    "database",
    "connection",
    "pool",
    "manager"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "author": {
    "name": "Nick Jennings",
    "email": "nick@silverbucket.net"
  },
  "scripts": {
    "release": "pnpm run lint && pnpm run test && pnpm run coverage && pnpm run build && pnpm run integration && pnpm run doc",
    "build": "tsc -v && tsc",
    "lint:fix": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint .",
    "test": "c8 -x src/bootstrap -x \"src/**/*.test.*\" mocha -r ts-node/register src/*.test.ts",
    "coverage": "c8 check-coverage --statements 70 --branches 90 --functions 60 --lines 70",
    "integration": "mocha -r ts-node/register src/index.integration.ts && yarn run build && mocha dist/index.integration.js",
    "doc": "typedoc ./src/index.ts"
  },
  "dependencies": {
    "debug": "4.3.4",
    "generic-pool": "3.9.0",
    "redis": "4.6.6"
  },
  "devDependencies": {
    "@babel/cli": "7.21.5",
    "@babel/core": "7.21.8",
    "@babel/preset-env": "7.21.5",
    "@babel/preset-typescript": "7.21.5",
    "@types/chai": "4.3.5",
    "@types/debug": "4.1.7",
    "@types/eslint": "8.37.0",
    "@types/mocha": "10.0.1",
    "@types/node": "20.1.0",
    "@types/sinon": "10.0.14",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "c8": "7.13.0",
    "chai": "4.3.7",
    "eslint": "8.40.0",
    "eslint-plugin-security-node": "1.1.1",
    "jsdoc-babel": "0.5.0",
    "jsdoc-to-markdown": "8.0.0",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "sinon": "15.0.4",
    "ts-node": "10.9.1",
    "typedoc": "0.24.7",
    "typescript": "5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/silverbucket/node-redis-connection-pool.git"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/silverbucekt/node-redis-connection-pool/issues"
  }
}
