{
  "name": "redis-connection-pool",
  "version": "4.0.1",
  "description": "a redis client connection pool",
  "homepage": "https://silverbucket.github.io/redis-connection-pool",
  "license": "MIT",
  "packageManager": "pnpm@9.15.1",
  "private": false,
  "keywords": [
    "redis",
    "client",
    "database",
    "connection",
    "pool",
    "manager"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "author": {
    "name": "Nick Jennings",
    "email": "nick@silverbucket.net"
  },
  "scripts": {
    "release": "npm run lint && npm run test && npm run coverage && npm run build && npm run integration && npm run doc",
    "build": "tsc -v && tsc",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS='--import=tsx' c8 -x src/bootstrap -x \"src/**/*.test.*\" mocha src/*.test.ts",
    "coverage": "c8 check-coverage --statements 88 --branches 88 --functions 82 --lines 88",
    "integration": "NODE_OPTIONS='--import=tsx' mocha src/index.integration.ts && pnpm run build && mocha dist/index.integration.js",
    "doc": "typedoc ./src/index.ts"
  },
  "dependencies": {
    "debug": "^4.4.0",
    "generic-pool": "^3.9.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/chai": "5.0.1",
    "@types/debug": "4.1.12",
    "@types/mocha": "10.0.10",
    "@types/node": "22.10.7",
    "@types/proxyquire": "1.3.31",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "c8": "10.1.3",
    "chai": "5.1.2",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "mocha": "11.0.1",
    "prettier": "^3.4.2",
    "proxyquire": "2.1.3",
    "sinon": "19.0.2",
    "tsx": "^4.19.2",
    "typedoc": "0.27.6",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/silverbucket/node-redis-connection-pool.git"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/silverbucekt/node-redis-connection-pool/issues"
  }
}
